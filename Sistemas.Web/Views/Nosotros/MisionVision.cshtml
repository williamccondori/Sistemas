@{
    ViewBag.Title = Model.Titulo;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-2">
            <section class="app-indice">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action" href="@Url.Action("Index")">Nosotros</a>
                    <a class="list-group-item list-group-item-action" href="@Url.Action("director")">Palabras del Director</a>
                    <a class="list-group-item list-group-item-action active" href="@Url.Action("misionvision")">Misión y Visión</a>
                    <a class="list-group-item list-group-item-action" href="@Url.Action("objetivo")">Objetivos</a>
                    <a class="list-group-item list-group-item-action" href="@Url.Action("perfilprofesional")">Perfil Profesional</a>
                    <a class="list-group-item list-group-item-action" href="@Url.Action("objetivoeducacional")">Objetivos Educacionales</a>
                    <a class="list-group-item list-group-item-action" href="@Url.Action("resultadoaprendizaje")">Resultados del Aprendizaje</a>
                </div>
            </section>
        </div>
        <div class="col-12 col-md-7">
            <section>
                <div class="app-sumilla">
                    <p>@Model.Sumilla</p>
                </div>
                <section>
                    <h4 class="app-h4">Misión</h4>
                    <p class="app-texto-resaltado">“<span>@Model.Mision</span>”.</p>
                    <h4 class="app-h4">Visión</h4>
                    <p class="app-texto-resaltado">“<span>@Model.Vision</span>”.</p>
                </section>
                <section>
                    <img src="@Model.UrlImagen" alt="mision_vision" class="app-imagen" />
                </section>
            </section>
        </div>
        <div class="col-12 col-md-3">

        </div>
    </div>
</div>